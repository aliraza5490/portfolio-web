---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import SignupForm from '../components/SignupForm.astro';
import { socials} from '../data/socials';
import { Icon} from 'astro-icon';

const seo = {
  title: 'Ali Web Developer',
  description: 'Hi there! I\'m Ali, a full-stack web developer with expertise in JavaScript, React, and Node.js. Currently, I am pursuing a Bachelor\'s degree in Computer Science from MNS University of Engineering and Technology, Multan, and I\'m also working as a freelance web developer.',
}
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 40vh;
    text-align: center;
  }

  .footer__socials {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    gap: 1.6rem;
    justify-content: center;
  }

  .footer__socials li a {
    position: relative;
    overflow: hidden;
    color: white;
    transition: color 0.3s ease;
  }

  .footer__socials li a::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #7dc580;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
    z-index: -1;
  }

  .footer__socials li a:hover {
    color: black;
  }

  .footer__socials li a:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in">Coming Soon</h1>
      <p class="fade-in">Hi there, The site is under development.</p>
    </article>
  </Container>
  <Container narrow>
    <ul class="footer__socials">
      {socials.map((social) => (
        <li class="socal__link">
          <a href={social.url} target="_blank" rel="noopener noreferrer">
            <Icon name={social.icon} width="50px" height="50px" />
          </a>
        </li>
      ))}
    </ul>
  </Container>
</Layout>

